<!DOCTYPE html>
<html lang="en">
  <head>
    {{>head}}
  </head>

  <body>
     <!-- animation -->
    {{> animation}}
    <!-- animation ends -->

    <!-- navbar -->
    {{> navbar}}
    {{!-- navbar-end --}}
   

    <!-- sidebar-nav -->
    {{> S_sidebar}}
    {{!-- sidebar end --}}

 

    <!-- enquiry_page -->
    <div class="center_part_fee">
      <div class="fee_top_attendance" style="color: red">
        Check your Attendance
      </div>
      <div class="attendance_middle">

        <form action="/student/searchAttendance" method="get">

            <div class="datepicker">
               <input
                 type="date"
                 name="searchAttendanceDate"
                 data-placeholder="Enter Date"
                 class="input_date_att"
                 required
               />
             </div>

            <table>
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Attendance</th>
                    </tr>
                </thead>
                <tbody> 
                  
                    {{#unless studentAttendance}}
                            <tr>
                                <td colspan="3" style="color: brown; text-align: center;">NO ATTENDANCE MARKED</td>

                            </tr>
                            <tr>
                                 <td colspan="3" style="color: brown; text-align: center;">ENTER DATE $ CLICK VIEW, FOR THAT DATE'S ATTENTDANCE RECORD</td>
                            </tr>
                    {{else}}
                      <!-- Content to render if the condition is truthy -->
                            {{#each studentAttendance}}
                            {{#each this.attendance}}

                            <tr>
                                <td>{{../../date}}</td>
                                <td>
                                    <div class="{{attend}}_button">{{attend}}</div>
                                </td>
                            </tr>

                            {{/each}}
                            {{/each}}
                    
                    {{/unless}}
                </tbody>
            </table>

             <div class="viewAttendanceButton ">
                <input type="submit" value="VIEW" >
            </div>

            </form>
      </div>
    </div>

    <script src="/js/jscript.js"></script>
  </body>
</html>
