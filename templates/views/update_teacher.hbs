<!DOCTYPE html>
<html lang="en">

<head>
   {{> head}}

</head>

<body>
     <!-- animation -->
    {{> animation}}
    <!-- animation ends -->

    <!-- navbar -->
    {{> navbar}}
    {{!-- navbar-end --}}
   

    <!-- sidebar-nav -->
    {{> sidebar}}
    {{!-- sidebar end --}}

       <div class="center_part_addstd">
      <div class="add_students_top">Update Teacher</div>
      <div class="add_students_middle">

        <form action="/updateTeacher/{{user._id}}" method="post" enctype="multipart/form-data">
          <table>
            <tr>
              <td>
                <input
                  type="text"
                  name="firstname"
                  value="{{user.firstname}}"
                  placeholder="First Name"
                  required
                />
              </td>
              <td>
                <input type="text" name="lastname" value="{{user.lastname}}" placeholder="Last Name"
                required />
              </td>
            </tr>
            <tr>
              <td>
                <input type="email" name="email" value="{{user.email}}" placeholder="example@123gmail.com" required />
              </td>
              <td></td>
            </tr>
            <tr>
              <td>
                <input
                  type="tel"
                  name="telephone"
                  value="{{user.telephone}}"
                  placeholder="800 000 0000"
                  pattern="[789][0-9]{9}"
                  required
                />
              </td>
              <td>
                <div class="radio-group">
                  <input
                    type="radio"
                    name="gender"
                    id="male"
                    value="male"
                    {{#if (eq user.gender "male")}} checked {{/if}}
                   
                  />
                  <label for="male" >male</label>

                  <input 
                    type="radio" 
                    name="gender" 
                    id="female" 
                    value="female" 
                    {{#if (eq user.gender "female")}} checked {{/if}} 
                  />
                  <label for="female" >female</label>
                </div>
              </td>
            </tr>
            <tr>
              <td>
                <input
                  type="number"
                  name="teacherid"
                  value="{{user.teacherid}}"
                  placeholder="Teacher ID"
                  min="0"
                  required
                />
              </td>
              <td>
                <input
                  type="number"
                  name="salary"
                  value="{{user.salary}}"
                  placeholder="salary"
                  min="0"
                  required
                />
              </td>
            </tr>
            <tr>
              <td>
                <fieldset class="address-fieldset">
                  <legend>Address:</legend>
                  <input type="text" name="street" value="{{user.address.street}}" placeholder="Street" />
                  <input type="text" name="city" value="{{user.address.city}}" placeholder="City" required/>
                  <input type="text" name="state" value="{{user.address.state}}" placeholder="State" required />
                  <input type="text" name="pincode" value="{{user.address.pincode}}" placeholder="PIN Code" required />
                </fieldset>
              </td>
              <!-- <td></td> -->
            </tr>
            <tr>
              <td>
                <input
                  type="date"
                  name="joiningdate"
                  value="{{user.joiningdate}}"
                  data-placeholder="Date of Joining"
                  required
                />
              </td>
              <td>
                <input
                  type="date"
                  name="dob"
                  value="{{user.dob}}"
                  data-placeholder="D.O.B"
                  required
                />
              </td>
            </tr>
            <tr>
              <td>
                <select name="teachingcourse" required>
                  <option value="" disabled >Teaching Course</option>
                    
                  {{!-- //TODO  select nhi ho rha expected --}}
                  {{#each courseAvailable}}
                  <option value="{{this.courseName}}"  {{#if (eq this.courseName  user.teachingcourse)}} selected {{/if}} >{{this.courseName}}
                  </option>
                  {{/each}}
                 
                </select>
              </td>
              <td>
                <input
                  type="file"
                  name="profilepic"
                  accept="image/*"
                />
              </td>
            </tr>
            <tr>
              <td></td>
              <td><input type="submit" value="Submit" /></td>
            </tr>
          </table>
        </form>
      </div>
    </div>


    <script src="js/jscript.js"></script>
</body>

</html>