<!DOCTYPE html>
<html lang="en">

<head>
    {{>head}}

</head>

<body>
     <!-- animation -->
    {{> animation}}
    <!-- animation ends -->

    <!-- navbar -->
    {{> navbar}}
    {{!-- navbar-end --}}
   

    <!-- sidebar-nav -->
    {{> sidebar}}
    {{!-- sidebar end --}}

    <div class="center_part_addstd">
        <div class="add_students_top">Add a Student</div>
        <div class="add_students_middle">
            
            <form action="addStudent" method="post" enctype="multipart/form-data" >
                <table>
                    <tr id="tr">
                        <td> <input type="text" name="firstname" placeholder="First Name" required> </td>
                        <td> <input type="text" name="lastname" placeholder="Last Name" required> </td>

                    </tr>
                    <tr>
                        <td> <input type="email" name="email" placeholder="hey12@email.com" required> </td>
                        <td> <input type="password" name="password" placeholder="password" required> </td>
                    </tr>

                    <tr>
                        <td> <input type="tel" name="telephone" placeholder=" 800 000 0000"   pattern="[789][0-9]{9}" required></td>
                        <td> <input type="text" name="location" placeholder="Location.." required></td>
                    </tr>
                    <tr>
                        <td> <input type="number" name="rollno" placeholder="Roll no." min="0" required> </td>
                        <td> <input type="number" name="fees" placeholder="Fees" min="0" required></td>
                    </tr>
                    <tr>
                        <td> <input type="date" name="joiningdate" data-placeholder="Date of Joining" ></td>
                        <td> <input type="date" name="dob" id="DOB" data-placeholder="D.O.B" required></td>
                    </tr>
                    <tr>
                        <td>
                            <select name="course" >
                                <option value="">Select Course</option>
                                <option value="html">html</option>
                                <option value="js">js</option>
                                <option value="css">css</option>
                            </select>



                        </td>
                        <td><input type="file" name="profilepic"  accept="image/*" data-placeholder="Profile img  " required> </td>


                    </tr>
                    <tr>
                        <td></td>
                        <td> <input type="submit" value="submit"></td>
                    </tr>

                </table>

            </form>
        </div>



    </div>



    <script src="js/jscript.js"></script>
</body>

</html>