<!DOCTYPE html>
<html lang="en">

<head>
    {{>head}}

</head>

<body>
     <!-- animation -->
    {{> animation}}
    <!-- animation ends -->

    <!-- navbar -->
    {{> navbar}}
    {{!-- navbar-end --}}
   

    <!-- sidebar-nav -->
    {{> sidebar}}
    {{!-- sidebar end --}}


     <div class="center_part_addstd">
      <div class="add_students_top">Add a Student</div>
      <div class="add_students_middle">
        
        <form action="/admin/addStudent" method="post" enctype="multipart/form-data">
          <!-- Including CSRF token in form (csrfToken -> global variable)-->
          {{!-- <input type="hidden" name="_csrf" value="{{csrfToken}}"> --}}
          <table>
            <tr>
              <td>
                <input
                  type="text"
                  name="firstname"
                  placeholder="First Name"
                  required
                />
              </td>
              <td>
                <input type="text" name="lastname" placeholder="Last Name"
                required />
              </td>
            </tr>
            <tr>
              <td>
                <input type="email" name="email" placeholder="example@123gmail.com" required />
              </td>
              <td>
                <input
                  type="password"
                  name="password"
                  placeholder="Password"
                  required
                />
              </td>
            </tr>
            <tr>
              <td>
                <input
                  type="tel"
                  name="telephone"
                  placeholder="mobileNo"
                  pattern="[789][0-9]{9}"
                  required
                />
              </td>
              <td>
                <div class="radio-group">
                  <input
                    type="radio"
                    name="gender"
                    id="male"
                    value="male"
                    checked
                  />
                  <label for="male" >male</label>
                  <input type="radio" name="gender" id="female" value="female" />
                  <label for="female" >female</label>
                </div>
              </td>
            </tr>
            <tr>
              <td>
                <input
                  type="number"
                  name="rollno"
                  placeholder="Roll no."
                  min="0"
                  required
                />
              </td>
              <td>
                {{!-- <input
                  type="number"
                  name="fees"
                  placeholder="fees"
                  min="0"
                  required
                  disabled
                  style="border: 1.5px gray solid; cursor:not-allowed;"
                /> --}}
              </td>
            </tr>
            <tr>
              <td>
                <input
                  type="number"
                  name="feeDiscout"
                  placeholder="Fee Discount in percentage"
                  min="0"     
                  max="100"         
                />
              </td>
              <td>
                <input
                  type="date"
                  name="dueDate"
                  data-placeholder="Due Date"
                  required
                />
              </td>
            </tr>

            <tr>
              <td class="address-group">
                <fieldset class="address-fieldset">
                  <legend>Address:</legend>
                  <input type="text" name="street" placeholder="Street" />
                  <input type="text" name="city" placeholder="City" required/>
                  <input type="text" name="state" placeholder="State" required />
                  <input type="text" name="pincode" placeholder="PIN Code" required />
                </fieldset>
              </td>
              <!-- <td></td> -->
            </tr>
            
            <tr>
              <td>
                <input
                  type="date"
                  name="joiningdate"
                  data-placeholder="Date of Joining"
                  required
                />
              </td>
              <td>
                <input
                  type="date"
                  name="dob"
                  data-placeholder="D.O.B"
                  required
                />
              </td>
            </tr>
            <tr>
              <td>
                <select name="course" required>
                  <option value="" disabled selected>Student Course</option>

                   {{#each courseAvailable}}
                  <option value="{{this.courseName}}" >{{this.courseName}}, (Rs {{this.courseFee}})
                  </option>
                  {{/each}}
                  
                </select>
              </td>
              <td>
                <input
                  type="file"
                  name="profilepic"
                  accept="image/*"
                  
                />
              </td>
            </tr>
            <tr>
              <td></td>
              <td><input type="submit" onsubmit="" value="Submit" /></td>
            </tr>
          </table>
        </form>
      </div>
    </div>




    <script src="/js/jscript.js"></script>
</body>

</html>