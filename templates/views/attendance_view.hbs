<!DOCTYPE html>
<html lang="en">

<head>
    {{>head}}

</head>

<body>
     <!-- animation -->
    {{> animation}}
    <!-- animation ends -->

    <!-- navbar -->
    {{> navbar}}
    {{!-- navbar-end --}}
   

    <!-- sidebar-nav -->
    {{> sidebar}}
    {{!-- sidebar end --}}

    <!-- enquiry_page -->
    <div class="center_part_fee">
        <div class="fee_top_attendance" style="color: red;">Past-Attendance</div>
        <div class="attendance_middle">

            <form action="/admin/searchAttendance/{{userCourse._id}}" method="get">

            <div class="datepicker">
               <input
                 type="date"
                 name="searchAttendanceDate"
                 data-placeholder="Enter Date"
                 class="input_date_att"
                 required
               />
             </div>

            <table>
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Roll no</th>
                        <th>Attendance</th>
                    </tr>
                </thead>
                <tbody> 
                    {{#each studentAttendance}}
                    {{#each this.attendance}}
                  
                    <tr>
                        <td>{{name}}</td>
                        <td>{{rollno}}</td>
                        <td>
                            <div class="{{attend}}_button"> {{attend}}</div>
                        </td>
                    </tr>

                    {{/each}}
                    {{/each}}
                </tbody>
            </table>

             <div class="viewAttendanceButton ">
                <input type="submit" value="VIEW" >
            </div>

            </form>

        </div>

    </div>



    <script src="js/jscript.js"></script>
</body>

</html>